{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Instalacja Klippera na BTT Pi",
			"type": "shell",
			"command": "./scripts/install-klipper.sh",
			"isBackground": false,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Kompilacja firmware SKR 3 EZ",
			"type": "shell",
			"command": "./scripts/compile-firmware.sh",
			"isBackground": false,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Sprawdź status Klippera",
			"type": "shell",
			"command": "ssh",
			"args": ["pi@${input:bttPiAddress}", "sudo systemctl status klipper"],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Restart Klippera",
			"type": "shell",
			"command": "ssh",
			"args": ["pi@${input:bttPiAddress}", "sudo systemctl restart klipper"],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Sprawdź porty serial",
			"type": "shell",
			"command": "ssh",
			"args": ["pi@${input:bttPiAddress}", "ls /dev/serial/by-id/"],
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		}
	],
	"inputs": [
		{
			"id": "bttPiAddress",
			"description": "Adres IP BTT Pi",
			"default": "192.168.1.100",
			"type": "promptString"
		}
	]
}